<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Games</title>
</head>
<body>
    <h1>Update Games</h1>
    <form action="/update-games" method="POST">
        <% games.forEach(game => { %>
            <div style="margin-bottom: 20px;">
                <h2>Game ID: <%= game.id %></h2>
                <label for="title-<%= game.id %>">Title:</label>
                <input type="text" id="title-<%= game.id %>" name="games[<%= game.id %>][title]" value="<%= game.title %>" required>
                <br>

                <label for="release_date-<%= game.id %>">Release Date:</label>
                <input type="date" id="release_date-<%= game.id %>" name="games[<%= game.id %>][release_date]" value="<%= game.release_date.toISOString().slice(0, 10) %>" required>
                <br>

                <label for="developer_id-<%= game.id %>">Developer ID:</label>
                <input type="number" id="developer_id-<%= game.id %>" name="games[<%= game.id %>][developer_id]" value="<%= game.developer_id %>" required>
                <br>

                <label for="genre_id-<%= game.id %>">Genre ID:</label>
                <input type="number" id="genre_id-<%= game.id %>" name="games[<%= game.id %>][genre_id]" value="<%= game.genre_id %>" required>
                <br>

                <!-- Include the game ID as a hidden input -->
                <input type="hidden" name="games[<%= game.id %>][id]" value="<%= game.id %>">
            </div>
        <% }); %>
        <button type="submit">Update All Games</button>
    </form>
    <a href="/">Home Page</a>
</body>
</html>
